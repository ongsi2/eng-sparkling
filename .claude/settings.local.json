{
  "permissions": {
    "allow": [
      "Bash(npm run dev:*)",
      "Bash(npm install)",
      "Bash(timeout 15 npm run dev:*)",
      "Bash(taskkill:*)",
      "Bash(rm:*)",
      "Bash(claude doctor)",
      "Bash(claude:*)",
      "Bash(cmd //c taskkill /PID 47284 /F)",
      "Bash(npx kill-port:*)",
      "WebSearch",
      "WebFetch(domain:peshare.com)",
      "WebFetch(domain:orbi.kr)",
      "Bash(timeout 10 bash:*)",
      "mcp__playwright__browser_navigate",
      "mcp__playwright__browser_snapshot",
      "Bash(export DISABLE_AUTOUPDATER=1)",
      "Bash(echo:*)"
    ]
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node -e \"const cmd = process.env.CLAUDE_TOOL_INPUT; const dangerous = ['rm -rf /', 'DROP DATABASE', 'DROP TABLE', '--no-preserve-root']; if (dangerous.some(d => cmd.includes(d))) { console.error('BLOCKED: Dangerous command detected'); process.exit(1); }\""
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "echo '[Hook] File modified - remember to run tests'"
          }
        ]
      }
    ]
  }
}
