{
  "permissions": {
    "allow": [
      // npm 명령어 자동 허가
      "Bash(npm install:*)",
      "Bash(npm run dev:*)",
      "Bash(npm run build:*)",
      "Bash(npm run start:*)",
      "Bash(npm run lint:*)",
      "Bash(npx:*)",

      // Git 명령어 (읽기 전용)
      "Bash(git status:*)",
      "Bash(git diff:*)",
      "Bash(git log:*)",
      "Bash(git branch:*)",

      // Vercel 배포
      "Bash(vercel:*)",

      // 프로젝트 파일 읽기/수정
      "Read(./eng-mvp/**)",
      "Edit(./eng-mvp/app/**)",
      "Edit(./eng-mvp/lib/**)",
      "Edit(./eng-mvp/types/**)",
      "Edit(./eng-mvp/components/**)",

      // 환경변수 파일 (읽기만)
      "Read(./eng-mvp/.env.local)",
      "Read(./eng-mvp/.env.example)"
    ],

    "ask": [
      // 위험한 작업은 확인 필요
      "Bash(git push:*)",
      "Bash(git commit:*)",
      "Bash(rm:*)",
      "Edit(./eng-mvp/.env.local)"
    ],

    "deny": [
      // 절대 허용하지 않을 작업
      "Bash(rm -rf:*)",
      "Bash(sudo:*)"
    ]
  }
}
